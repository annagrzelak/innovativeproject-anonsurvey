extends layout

block content
    div(align='center')
      h1 Annonymous Surveys App 
      h2 Sign In
    div(align='center', ng-app='ng-app')
      hr
      form#signInForm(method='post', action='/profile')
        label e-mail:
        input(type='text', ng-model='yourName', name='email', placeholder='Enter a e-mail here')
        label password:
        input(type='password', ng-model='yourPass', name='password', placeholder='Enter a password here')
        input(type='submit', ng-model='yourSubmit', name='submit', value='Sign In')
      hr