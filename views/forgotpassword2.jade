extends layout

block content
	div(align='center')
		div(align='center', ng-app='ng-app')
			h2 Enter your new password
			form#form1(action='/setnewpassword', method='post')
				p Your email:
				input(type='text', name='youremail', value=info.useremail, readonly)
				br
				p Your name:
				input(type='text', name='yourname', value=info.username)
				br
				p Your surname:
				input(type='text', name='yoursurname', value=info.usersurname)
				br
				p Type new password:
				input(type='password', name='yournewpass', placeholder='Enter new password here')
				br
				p Repeat new password:
				input(type='password', name='yournewpass2', placeholder='Repeat new password here')
				br
				button.btn.btn-medium.btn-info(type='submit', form='form1', value='OK') OK